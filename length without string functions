#include <stdio.h>

int main() {
    char str[100];
    int i = 0;

    // Input string
    printf("Enter a string: ");
    gets(str);  // Note: gets() is unsafe; use fgets() in real programs

    // Display the string
    printf("You entered: %s\n", str);

    // Find string length
    while (str[i] != '\0') {
        i++;
    }
    printf("Length of the string: %d\n", i);

    return 0;
}
