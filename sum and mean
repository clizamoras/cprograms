
#include<stdio.h>
int main(){
int arr[100],n,sum=0;
float mean;
int *ptr;
printf("Enter the value of n");
scanf("%d",&n);
for(int i=0;i<n;i++){
   scanf("%d",&arr[i]);
}
ptr=arr;
for(int i=0;i<n;i++){
sum+=*(ptr+i);
}
mean=(float)(sum/n);
printf("The sum is:%d\n",sum);
printf("The mean is %.2f\n",mean);
return 0;
)
